{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "symfony/console": "5.2.*",
        "symfony/dotenv": "5.2.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.2.*",
        "symfony/monolog-bundle": "^3.6",
        "symfony/property-access": "5.2.*",
        "symfony/serializer": "5.2.*",
        "symfony/uid": "5.2.*",
        "symfony/yaml": "5.2.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpmd/phpmd": "^2.9",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.67",
        "phpstan/phpstan-symfony": "^0.12.14",
        "symfony/phpunit-bridge": "^5.2"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Api\\": "src/Api/",
            "Shared\\": "src/Shared/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "dev": "symfony server:stop && symfony server:start -d",
        "phpstan": [
            "@php bin/console cache:warmup --env=dev",
            "@php bin/console cache:warmup --env=test",
            "@phpstan-src",
            "@phpstan-tests"
        ],
        "phpstan-src": "phpstan analyse -c config/phpstan/phpstan.neon --no-progress",
        "phpstan-tests": "phpstan analyse -c config/phpstan/phpstan-tests.neon --no-progress",
        "tests": "phpunit",
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.2.*"
        }
    }
}
